{
  "settings": {
    "react": {
      "pragma": "React",
      "version": "latest"
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jsx-a11y/recommended"],
  "globals": {
    "React": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "jsx-a11y"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "react/prop-types": 0,
    "react/jsx-no-undef": [2, { "allowGlobals": true }],
    "jsx-a11y/anchor-is-valid": 1
  }
}
